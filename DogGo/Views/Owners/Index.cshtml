                            @Html.DisplayFor(dogItem => dog.Name) 
                            @Html.DisplayFor(dogItem => dog.Breed) 
                            @Html.DisplayFor(dogItem => dog.Notes) 
                            @Html.DisplayFor(dogItem => dog.ImageUrl)
